@model List<lib.Models.book>
@{
    ViewBag.Title = "updatebook";
}
@foreach (var m in Model)
{
        <link rel="stylesheet" href="~/Css/style.css">
        <body style="background-image: url( ~/image/1.jpg)">
            <div class="main">
                <section class="signup">
                    <div class="container">
                        <div class="signup-content">

                            <form method="post" action="updatebook" id="signup-form" class="signup-form">
                                <h2 class="form-title">Update Book</h2>
                                <input type="hidden" name="id" value="@m.id" />
                                Book Name
                                <div class="form-group">
                                    <input type="text" class="form-input" id="bookname" name="bookname" value="@m.name" required /><br />
                                </div>
                                Book Author
                                <div class="form-group">
                                    <input type="text" class="form-input" name="author" id="dcity" value="@m.author" required /><br />
                                </div>
                                Book Copies
                                <div class="form-group">
                                    <input type="text" class="form-input" name="copies" id="destination" value="@m.copies" required /><br />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Update Book" style="width: 200px; height: 50px;background: lightblue;border: 1px solid #fff; cursor: pointer;border-radius: 20px; color: black; font-family: 'Exo', sans-serif;font-size: 16px; font-weight: 400;padding: 10px;margin-top: 10px;  margin-left: 90px;" />
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </body>
}